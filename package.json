    "build:development": " --- BUILD (DEVELOPMENT) --- ",
    "build:production": " --- BUILD (PRODUCTION) --- ",

    "testing": " --- TESTING --- ",
    "test": "cross-env NODE_ENV=test c8 --reporter=lcov mocha ./test/main.js",
