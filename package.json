{
  "name": "jov2",
  "version": "1.0.0",
  "description": "A light Javascript API for reading OV2 POI databases",
  "main": "index.js",
  "bin": {},
  "scripts": {
    "general": " --- GENERAL ---",
    "build:js": " --- JAVASCRIPT --- ",
